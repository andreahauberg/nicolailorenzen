---
const { data } = Astro.props;
console.log(data);
---

<article>
  <div class="content">
    <img src={data.image} alt="" />
    <h2>{data.name}</h2>
  </div>
</article>

<style>
  article {
    display: flex;
    margin-bottom: 2rem;
    padding-left: 1rem;
    padding-right: 1rem;
    justify-content: center;
  }

  .content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  img {
    width: 80%;
  }

  @media (min-width: 768px) {
    img {
      width: 40%;
    }

    article:nth-child(even) .content {
      align-items: flex-start;
    }

    article:nth-child(odd) .content {
      align-items: flex-end;
    }
  }
</style>

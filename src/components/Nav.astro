---
const { data } = Astro.props;
---

<nav>
  <div class="nav">
    <div class="grid">
      <a class="xlg_size" href="/about">About</a>
      <a id="book" class="xlg_size" href="/book">Book</a>
    </div>
    <div class="work_container" id="workItem">
      <div class="fold" id="foldContainer">
        <a class="xlg_size" id="work" href="#">Work</a>
        <img
          class="icon"
          src="/fold_icon.svg"
          alt="folding icon"
          width="1000"
          height="1000"
        />
      </div>
      <ul>
        <a href="/">Portraits</a>
        <a href="/weddings">Weddings</a>
        <a href="/cowboys">Cowboys</a>
        <a href="/texas">Texas</a>
        <a href="/mikeshouse">Mike's House</a>
        <a href="/business">Business</a>
      </ul>
    </div>
  </div>
</nav>

<style>
  img {
    width: 3cqw;
    max-width: 100px;
  }
  @media (min-width: 768px) {
    img {
      width: 1.5cqw;
      max-width: 100px;
    }
  }

  nav {
    padding: 2%;
    border-top: solid var(--border-width) var(--primary-text);
    border-bottom: solid var(--border-width) var(--primary-text);
  }

  ul {
    background-color: var(--primary-background-color);
  }

  a {
    padding: 15px;
    display: inline-block;
    position: relative;
  }
  @media (min-width: 768px) {
    a {
      padding: 1rem;
    }
  }
  @media (min-width: 2200px) {
    a {
      padding: 2rem;
    }
  }

  .grid::after {
    content: "";
    position: absolute;
    height: 100%;
    border-right: solid var(--border-width) var(--primary-text);
    right: 0;
  }
  a,
  .work_container {
    position: relative;
  }

  nav li:first-child a::after {
    border: none;
  }

  .nav {
    list-style: none;
    display: flex;
    justify-content: space-evenly;
    flex-wrap: nowrap;
  }

  ul {
    display: none;
    position: absolute;
    right: -38%;
    top: 119%;
    /* border: solid var(--border-width) var(--primary-text); */
    border-bottom: solid var(--border-width) var(--primary-text);
    border-left: solid var(--border-width) var(--primary-text);
    border-right: solid var(--border-width) var(--primary-text);
  }
  @media (min-width: 450px) {
    ul {
      right: -48%;
    }
  }
  @media (min-width: 500px) {
    ul {
      right: -52%;
      top: 124%;
    }
  }
  @media (min-width: 600px) {
    ul {
      right: -100%;
      width: 300%;
      top: 129%;
      text-align: center;
    }
  }
  @media (min-width: 800px) {
    ul {
      top: 130%;
    }
  }
  @media (min-width: 900px) {
    ul {
      top: 132%;
    }
  }
  @media (min-width: 1000px) {
    ul {
      top: 135%;
    }
  }
  @media (min-width: 1100px) {
    ul {
      top: 138%;
    }
  }
  @media (min-width: 1200px) {
    ul {
      top: 141%;
    }
  }
  @media (min-width: 1300px) {
    ul {
      top: 144%;
    }
  }
  @media (min-width: 1400px) {
    ul {
      top: 146%;
    }
  }
  @media (min-width: 1500px) {
    ul {
      top: 152%;
    }
  }
  @media (min-width: 1600px) {
    ul {
      top: 150%;
    }
  }
  @media (min-width: 1700px) {
    ul {
      top: 152%;
    }
  }
  @media (min-width: 1800px) {
    ul {
      top: 154%;
    }
  }
  @media (min-width: 1900px) {
    ul {
      top: 156%;
    }
  }
  @media (min-width: 2000px) {
    ul {
      top: 158%;
    }
  }
  @media (min-width: 2200px) {
    ul {
      top: 146%;
    }
  }
  @media (min-width: 3000px) {
    ul {
      top: 152%;
    }
  }
  @media (min-width: 3500px) {
    ul {
      top: 156%;
    }
  }
  nav li:last-child a::after {
    border: none;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    position: relative;
    left: -5%;
    gap: 2em;
  }

  @media (min-width: 768px) {
    .grid {
      grid-template-columns: 1fr 1fr 1fr;
      position: relative;
      left: -8%;
      gap: 3em;
    }
  }
  .fold {
    display: flex;
  }
  .fold.clicked img {
    rotate: 180deg;
  }

  .icon {
    cursor: pointer;
  }
  a:hover {
    text-decoration: underline;
  }

  #work {
    margin-left: -8%;
  }
  @media (min-width: 768px) {
    #work {
      margin-left: -18%;
    }
  }
  #book {
    margin-left: -25%;
  }
  @media (min-width: 768px) {
    #book {
      margin-left: 0;
    }
  }

  .xlg_size {
    font-size: var(--xlg-size);
  }
</style>

<script src="../js/fold.js"></script>

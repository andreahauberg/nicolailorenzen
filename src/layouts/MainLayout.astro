---
import "../styles/style.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Discover Nicolai, a Copenhagen-based freelance photographer | blending innovation with authenticity | With a background in photojournalism from DMJX | Editorial contributions to Dagbladet Børsen and Jyllands-Posten | Nicolai captures timeless moments with a natural and edgy style | Explore his portfolio today."
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <p id="scroll-to-top">To Top ↑</p>
    </main>
    <Footer />
  </body>
</html>

<script src="../js/scroll.js"></script>

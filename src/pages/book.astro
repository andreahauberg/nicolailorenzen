---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Book">
  <section>
    <div class="contact">
      <h1>CONTACT</h1>
      <p>Regarding any and all enquiries, please do not hesitate to contact.</p>
      <form action="#" method="post">
        <input type="text" id="name" name="name" placeholder="Name*" required />
        <input
          type="email"
          id="email"
          name="email"
          placeholder="E-mail*"
          required
        />
        <textarea
          id="message"
          name="message"
          rows="8"
          placeholder="Message*"
          required></textarea>

        <button type="submit">Submit</button>
      </form>
    </div>
    <div class="prices">
      <h2>PRICES</h2>
      <!-- <p class="price_item">
        These are standard prices. Regarding any and all enquiries, please don't
        hesitate to contact.
      </p> -->
      <p class="price_item">
        <b>One Portrait</b>
        <br /> Including retouch for SoMe and website: <br /> DKK 1.500.
      </p>
      <p class="price_item">
        <b>Two Portraits</b>
        <br /> Including editing for website/press: <br /> DKK 3.850.
      </p>
      <p class="price_item">
        <b>Three Portraits and a small film</b>
        <br /> Including retouch and post-production: <br /> DKK 6.500.
      </p>
      <p class="price_item">
        <b>Wedding ceremony and a small film</b>
        <br /> Including retouch and post-production: <br /> DKK 7.200.
      </p>
    </div>
  </section>
</MainLayout>

<style>
  @media (min-width: 900px) {
    section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-areas: "contact prices";
      gap: 2rem;
    }

    .contact {
      grid-area: prices;
    }

    .prices {
      grid-area: contact;
    }
  }

  h1 {
    padding-bottom: 0.5rem;
  }
  h2 {
    font-size: var(--xxlg-size);
    padding-bottom: 0.5rem;
  }

  .contact,
  .prices {
    padding-top: 2rem;
    padding-left: 0.5rem;
  }
  .prices {
    padding-bottom: 2rem;
  }
  form {
    width: 80%;
    max-width: 100%;
    padding: 20px 20px 20px 0;
  }

  input,
  textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 5%;
    box-sizing: border-box;
    font-family: monospace;
    border: solid 1px var(--secondary-text);
    background-color: white;
    font-size: var(--sm-size);
  }
  button {
    font-family: monospace;
    background-color: var(--secondary-text);
    color: white;
    padding: 8px 15px;
    border: solid 1px var(--secondary-text);
    cursor: pointer;
    font-size: var(--sm-size);
  }
  button:hover {
    background-color: white;
    color: var(--secondary-text);
    text-decoration: underline;
  }
  .price_item,
  p {
    line-height: 2.5ch;
  }
  .price_item {
    padding-bottom: 1.5rem;
  }
</style>
